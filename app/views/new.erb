<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>New Recipe</title>
  </head>
  <body>

    <form action="/recipes" method="POST">

      <!-- Recipe Name -->
      <label for="recipe_name">Name: </label>
      <input id="recipe_name" type="text" name="name">

      <!-- Recipe Ingredients -->
      <label for="ingredients_names">Ingredients: </label>
      <input id="ingredients_names" type="text" name="ingredients">

      <!-- Recipe Cook Time -->
      <label for="cook_time">Cook Time: </label>
      <input id="cook_time" type="text" name="cook_time">

      <input type="submit" value="submit">
    </form>

  </body>
</html>
