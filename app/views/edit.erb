<html>

    <form action="/recipes/<%= @recipe.id %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">

        <h4>Recipe Name: <%= @recipe.name %></h4>
        <label for="recipe-name">Change To:</label>
        <input id ="recipe-name" type="text" name="name">

        <h4>Recipe Ingredients: <%= @recipe.ingredients %></h4>
        <label for="recipe-ingredients">Change To:</label>
        <input id ="recipe-ingredients" type="text" name="ingredients">

        <h4>Recipe Cook Time: <%= @recipe.cook_time %></h4>
        <label for="recipe-cook-time">Change To:</label>
        <input id ="recipe-cook-time" type="text" name="cook_time">
        <input type="submit" value="submit">
    </form>


</html>