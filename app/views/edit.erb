<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="recipe-name">Recipe Name: </label>
  <input id="recipe-name" type="text" name="name" placeholder="Recipe Name" value="<%= @recipe.name %>">
  <label for="recipe-ingredients">Recipe Ingredients: </label>
  <input id="recipe-ingredients" type="text" name="ingredients" placeholder="Recipe Ingredients" value="<%= @recipe.ingredients %>">
  <label for="cook_time">Recipe Cook Time: </label>
  <input id="cook_time" type="text" name="cook_time" placeholder="Recipe Cook Time" value="<%= @recipe.cook_time %>">

  <input type="submit" value="submit">
</form>
