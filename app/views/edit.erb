<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>New Recipe</title>
  </head>
  <body>

    <form action="/recipes/<%= @recipe.id %>" method="POST">
      <input id="hidden" type="hidden" name="_method" value="patch">

      <!-- Recipe Name -->
      <label for="recipe_name">Name: </label>
      <input id="recipe_name" type="text" name="name" value="<%= @recipe.name %>">

      <!-- Recipe Ingredients -->
      <label for="ingredients_names">Ingredients: </label>
      <input id="ingredients_names" type="text" name="ingredients" value="<%= @recipe.ingredients %>">

      <!-- Recipe Cook Time -->
      <label for="cook_time">Cook Time: </label>
      <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>">

      <input type="submit" value="submit">
    </form>

  </body>
</html>
